pkgname=julia-git-csv-src
pkgver=0.10.12
_commit=849f17ff2cb8ee48325334ed410ed4debc6c838c
pkgrel=1
pkgdesc="CSV.jl"
url="https://github.com/JuliaData/CSV.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/JuliaData/CSV.jl.git#commit=$_commit"
        0001-Fix-memory-buffer-support.patch)
sha256sums=('SKIP'
            '9c6ef625d2fefd37032c0fd3f6af144cec1886e3e910c70de1bb35125382fefa')

prepare() {
  cd CSV.jl

  patch -Np1 --no-backup-if-mismatch < ../0001-Fix-memory-buffer-support.patch
}

package() {
  cd CSV.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh CSV "${pkgdir}" "${pkgname}" julia-git
}
