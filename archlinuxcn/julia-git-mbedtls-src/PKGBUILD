sha256sums=('SKIP')

package() {
  cd MbedTLS.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh MbedTLS "${pkgdir}" "${pkgname}" julia-git
}
