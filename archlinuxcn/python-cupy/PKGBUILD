# Maintainer: Hu Butui <hot123tea123@gmail.com>
# Contributor: Leo Mao <leomaoyw at gmail dot com>

_pkgname=cupy
pkgname=python-cupy
pkgver=12.1.0.post1
pkgrel=1
pkgdesc='A NumPy-compatible array library accelerated by CUDA'
url='https://cupy.dev'
arch=('x86_64')
license=('MIT')
depends=(
  cuda
  libcudart.so
  python-fastrlock
  python-numpy
  )
makedepends=(
  cudnn
  # cython
  gcc12
  git
  nccl
  python-pip
  python-setuptools
)
optdepends=(
  cudnn
  libcutensor
  nccl
)
source=("${_pkgname}-${pkgver}::git+https://github.com/cupy/cupy.git#tag=v${pkgver}")
sha256sums=('SKIP')

prepare() {
  cd "${_pkgname}-${pkgver}"
  git submodule update --init --recursive
  # build with gcc 12
  export CC=gcc-12
  export CXX=g++-12
  # quick fix, build with cython < 3.0
  pip install --user --break-system-packages cython==0.29.36
}

build() {
  cd "${_pkgname}-${pkgver}"
  CUDA_PATH=/opt/cuda \
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --skip-build --prefix=/usr --root="${pkgdir}" --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
# vim:set ts=2 sw=2 et:
