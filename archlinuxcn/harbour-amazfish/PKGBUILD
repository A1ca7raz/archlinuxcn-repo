# Maintainer: Ikosse <andrelofgren@hotmail.co.uk>

pkgname=harbour-amazfish
pkgver=2.2.5
pkgrel=1
pkgdesc="Companion application for Huami Devices and the Pinetime Infinitime"
arch=('x86_64' 'aarch64')
url="https://github.com/piggz/${pkgname}"
provides=('amazfish')
license=('GPL-3.0-or-later')
depends=(
	'qt5-base'
	'karchive5'
	'kdb'
	'kcontacts5'
	'qt5-location'
	'qt5-connectivity'
	'qtmpris'
	'nemo-qml-plugin-dbus'
	'kirigami2'
	'bluez-qt5'
)
makedepends=('git')
source=("${pkgname}-${pkgver}::${url}/archive/refs/tags/${pkgver}.tar.gz")
sha512sums=('61639d9ecee4879280c4c6c449d3ad95fde3cb65c8149e6b55247187238914c82b06ec3afa185787e02f210fc6ba599726993a3febd13b12d096541b6ce62f14')

prepare() {
	cd "${pkgname}-${pkgver}/"
	rm -rf qble daemon/libwatchfish
	git init
	git submodule add https://github.com/piggz/qble.git qble
	git submodule add https://github.com/piggz/libwatchfish.git daemon/libwatchfish
}

build() {
	cd "${pkgname}-${pkgver}/"
	qmake FLAVOR=kirigami PREFIX=/usr .
	make
}

package() {
	cd "${pkgname}-${pkgver}/"
	make INSTALL_ROOT="${pkgdir}" install
}
