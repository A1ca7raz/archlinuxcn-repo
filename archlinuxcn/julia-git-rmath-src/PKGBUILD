pkgname=julia-git-rmath-src
pkgver=0.7.1
_commit=a670288984627a66f67bdb5218160b2682ff0df3
pkgrel=1
pkgdesc="Rmath.jl"
url="https://github.com/JuliaStats/Rmath.jl.git"
arch=('any')
