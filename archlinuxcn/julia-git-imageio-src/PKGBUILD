sha256sums=('SKIP')

package() {
  cd ImageIO.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh ImageIO "${pkgdir}" "${pkgname}" julia-git
}
