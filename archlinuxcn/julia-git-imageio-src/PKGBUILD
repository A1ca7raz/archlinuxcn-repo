pkgname=julia-git-imageio-src
pkgver=0.6.7
_commit=e947e647d8179d7c4f62f2691eec86002bdc439c
pkgrel=1
pkgdesc="ImageIO.jl"
url="https://github.com/JuliaIO/ImageIO.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
