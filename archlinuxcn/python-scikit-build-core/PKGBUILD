# Maintainer: Hu Butui <hot123tea123@gmail.com>

_name=scikit-build-core
pkgname=python-scikit-build-core
pkgdesc='A next generation Python CMake adaptor and Python API for plugins'
url='https://github.com/scikit-build/scikit-build-core'
pkgver=0.9.0
pkgrel=1
arch=('any')
license=('Apache-2.0')
depends=(
  cmake
  python-cattrs
  python-hatch-fancy-pypi-readme
  python-numpy
  python-packaging
  python-pathspec
  python-pyproject-metadata
  python-rich
  python-setuptools
  python-setuptools-scm
  python-tomli
)
makedepends=(
  python-build
  python-hatch-vcs
  python-hatchling
  python-installer
)
source=(
  "${_name}-${pkgver}.tar.gz::https://github.com/scikit-build/scikit-build-core/archive/refs/tags/v${pkgver}.tar.gz"
)
sha512sums=('3288b4c1eb7eca48ee48b2052de0303330fd314ce80a2c7206ddcffb1e8476d17459fe0d50ff8d9b3359d0f4de3b75cdf79ec29fa27c6a3b1a599851e6d432b7')

build() {
  cd "${_name}-${pkgver}"
  python -m build --wheel --no-isolation
}

package() {
  cd "${_name}-${pkgver}"
  python -m installer --destdir="${pkgdir}" dist/*.whl
}
