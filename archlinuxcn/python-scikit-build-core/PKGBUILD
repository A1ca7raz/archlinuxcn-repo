# Maintainer: Hu Butui <hot123tea123@gmail.com>

_name=scikit-build-core
pkgname=python-scikit-build-core
pkgdesc='A next generation Python CMake adaptor and Python API for plugins'
url='https://github.com/scikit-build/scikit-build-core'
pkgver=0.9.2
pkgrel=1
arch=('any')
license=('Apache-2.0')
depends=(
  cmake
  python-cattrs
  python-hatch-fancy-pypi-readme
  python-numpy
  python-packaging
  python-pathspec
  python-pyproject-metadata
  python-rich
  python-setuptools
  python-setuptools-scm
  python-tomli
)
makedepends=(
  python-build
  python-hatch-vcs
  python-hatchling
  python-installer
)
source=(
  "${_name}-${pkgver}.tar.gz::https://github.com/scikit-build/scikit-build-core/archive/refs/tags/v${pkgver}.tar.gz"
)
sha512sums=('362d6599db0595b1d60ff3b6d94c45ec6218bfd8d1ab9f16181fbb0e68bffed8cbec5a06a8a560e2229045d4669f52251330945f0578886a5c393494f2273abe')

build() {
  cd "${_name}-${pkgver}"
  python -m build --wheel --no-isolation
}

package() {
  cd "${_name}-${pkgver}"
  python -m installer --destdir="${pkgdir}" dist/*.whl
}
