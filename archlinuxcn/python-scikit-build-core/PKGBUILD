# Maintainer: Hu Butui <hot123tea123@gmail.com>

_name=scikit-build-core
pkgname=python-scikit-build-core
pkgdesc='A next generation Python CMake adaptor and Python API for plugins'
url='https://github.com/scikit-build/scikit-build-core'
pkgver=0.9.1
pkgrel=1
arch=('any')
license=('Apache-2.0')
depends=(
  cmake
  python-cattrs
  python-hatch-fancy-pypi-readme
  python-numpy
  python-packaging
  python-pathspec
  python-pyproject-metadata
  python-rich
  python-setuptools
  python-setuptools-scm
  python-tomli
)
makedepends=(
  python-build
  python-hatch-vcs
  python-hatchling
  python-installer
)
source=(
  "${_name}-${pkgver}.tar.gz::https://github.com/scikit-build/scikit-build-core/archive/refs/tags/v${pkgver}.tar.gz"
)
sha512sums=('7b8e1c7cfc2c9b6c955e568859308b5ead821072b6c9e32d49a23a14d6527b5b4f2aa32d58097c168ade62a2ea37657184739a1e9c1e164afcd48837d69bea44')

build() {
  cd "${_name}-${pkgver}"
  python -m build --wheel --no-isolation
}

package() {
  cd "${_name}-${pkgver}"
  python -m installer --destdir="${pkgdir}" dist/*.whl
}
