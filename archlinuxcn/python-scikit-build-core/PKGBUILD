# Maintainer: Hu Butui <hot123tea123@gmail.com>

_name=scikit-build-core
pkgname=python-scikit-build-core
pkgdesc='A next generation Python CMake adaptor and Python API for plugins'
url='https://github.com/scikit-build/scikit-build-core'
pkgver=0.8.1
pkgrel=1
arch=('any')
license=('Apache')
depends=(
  cmake
  python-cattrs
  python-hatch-fancy-pypi-readme
  python-numpy
  python-packaging
  python-pathspec
  python-pyproject-metadata
  python-rich
  python-setuptools
  python-setuptools-scm
  python-tomli
)
makedepends=(
  python-build
  python-hatch-vcs
  python-hatchling
  python-installer
)
source=(
  "${_name}-${pkgver}.tar.gz::https://github.com/scikit-build/scikit-build-core/archive/refs/tags/v${pkgver}.tar.gz"
)
sha512sums=('90fa301efddb220f05f26f81c71886889228f7bed39338f9e37e741a649cccc2e2f7202659f9d46efd2639a2c8a28c306370c1a515c5f3f083a94ffb746a1e5f')

build() {
  cd "${_name}-${pkgver}"
  python -m build --wheel --no-isolation
}

package() {
  cd "${_name}-${pkgver}"
  python -m installer --destdir="${pkgdir}" dist/*.whl
}
