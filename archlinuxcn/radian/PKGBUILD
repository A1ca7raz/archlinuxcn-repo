# Maintainer: Butui Hu <hot123tea123@gmail.com>

pkgname=radian
pkgver=0.6.10
pkgrel=1
pkgdesc='A 21 century R console'
arch=('any')
url='https://github.com/randy3k/radian'
license=('MIT')
depends=(
  python-lineedit
  python-rchitect
)
makedepends=(
  python-pip
  python-setuptools
)

source=("${pkgname}-${pkgver}.tar.gz::https://github.com/randy3k/radian/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('08f83446dfc183f55b0ac018b5f5fb0b14e95236e236a20a74ba36da42b78003d338dbe5bd7a55753497bbf42e727846c39288047ea239c7574ad8294f329d24')

build() {
  cd "${pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
# vim:set ts=2 sw=2 et:
