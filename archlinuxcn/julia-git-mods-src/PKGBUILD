pkgname=julia-git-mods-src
pkgver=1.3.3
_commit=551d1ecbbca34c91a8ea653d949302bcd95ecf48
pkgrel=1
pkgdesc="Mods.jl"
url="https://github.com/scheinerman/Mods.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
