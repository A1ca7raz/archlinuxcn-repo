optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('c37678b1dad133b8f7fa0005fbaf300b6b368848500e98dd7dad34e01a29481dc230dcfb40f182b3cfe7ec03d8be3f171cc7e883ad051c59400b39e244e4827b')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

