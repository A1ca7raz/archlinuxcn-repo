optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('c8aa3849932294e5d3d9d9d202236ce893efb8450fff190afae3077e4c5d114b3ae80fc794d417014b8b1fb704d5a6ace2fa3f1a874f25f26db6d8e0d3218c7a')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

