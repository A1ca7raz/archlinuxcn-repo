conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('69580d9368f53729e42a2d5a92f87fc39ed8a8ebf5cb4ee8f56423f7a8ef904a1a7ba9ec8be801ffe44354d0b6f9d7c4b1d8b0a80864f836559e831581dfecf5')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

