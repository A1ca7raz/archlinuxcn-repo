optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('dba4431b6b629e3953c2fb631c61fd1449d5038dd7d65a521301e5fc10cb2a7269de04f1ba68ed20b3cbf76ff334d316263c9c4f5b7d0863fa9864d3cc69c09c')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

