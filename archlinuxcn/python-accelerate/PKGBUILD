optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('ae3032a4f644dc09cb8a8f6ded9f010b5f77da0e47b0a656985fa4c2ba67a9581820aa668d43bed5f502494b5996a95f64831d25a6a3155553065062936601b8')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

