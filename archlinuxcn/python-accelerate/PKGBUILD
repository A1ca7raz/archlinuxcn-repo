optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('7f4a51b9e9eb4ba7ea29aea923eaf4d76f3874871c4f2d70f9d45ecae54d8d3b5095a32aaa98fea1dbc754691689804904b00bf2cde39aa9f7899b9f74278696')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

