optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('99e6069eba81c30295db03f22f5a0ba6783010505e6ab9c139f2e9e6f7e63379b3b32de97fe5e857a6f852b272d1a259c6e3d1d79a5a9aa77261c75dbca8a2db')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

