optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('aaab3dd27e2285e5c7d6c68cdc01d4ae1c405cd1033b012e981b37fbcc93135bf9ac50a7d8827f57390b050697f5c2966020b4aa3c33a4a604d19ac87c780547')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

