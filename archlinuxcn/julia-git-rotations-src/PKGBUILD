pkgname=julia-git-rotations-src
pkgver=1.6.0
_commit=f6ff1c64d93ac2ec665cb11121d89d35f24dc60a
pkgrel=1
pkgdesc="Rotations.jl"
url="https://github.com/JuliaGeometry/Rotations.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
