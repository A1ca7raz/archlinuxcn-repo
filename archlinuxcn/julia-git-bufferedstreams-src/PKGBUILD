pkgname=julia-git-bufferedstreams-src
pkgver=1.2.1
_commit=e0ea26d670216ba3c179f219115383ccb06b0c4f
pkgrel=1
pkgdesc="BufferedStreams.jl"
url="https://github.com/JuliaIO/BufferedStreams.jl.git"
arch=('any')
