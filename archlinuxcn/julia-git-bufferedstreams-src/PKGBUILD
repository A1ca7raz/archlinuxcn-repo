sha256sums=('SKIP')

package() {
  cd BufferedStreams.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh BufferedStreams "${pkgdir}" "${pkgname}" julia-git
}
