pkgname=julia-git-formatting-src
pkgver=0.4.2
_commit=6219892973e74f9b929e0fb6ac90be7b7bde6347
pkgrel=1
pkgdesc="Formatting.jl"
url="https://github.com/JuliaIO/Formatting.jl.git"
arch=('any')
