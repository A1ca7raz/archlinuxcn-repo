sha256sums=('SKIP')

package() {
  cd ImageBase.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh ImageBase "${pkgdir}" "${pkgname}" julia-git
}
