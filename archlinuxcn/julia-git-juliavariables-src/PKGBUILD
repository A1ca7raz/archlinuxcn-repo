pkgname=julia-git-juliavariables-src
pkgver=0.2.4
_commit=1f65b473f5d4307b2da49b9ce20fe7f6905010ec
pkgrel=1
pkgdesc="JuliaVariables.jl"
url="https://github.com/JuliaStaging/JuliaVariables.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
