sha256sums=('SKIP')

package() {
  cd JuliaVariables.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh JuliaVariables "${pkgdir}" "${pkgname}" julia-git
}
