pkgname=julia-git-groebner-src
pkgver=0.7.3
_commit=ceb50c1638350fe4957e3486c194b145850bcb48
pkgrel=1
pkgdesc="Groebner.jl"
url="https://github.com/sumiya11/Groebner.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/sumiya11/Groebner.jl.git#commit=$_commit"
        0001-Use-pointer-instead-of-unsafe_convert.patch)
sha256sums=('SKIP'
            'd3907a142ab6673308cf2bce9376385d809cada1031f0069ea7fc27c5f72ffd3')

prepare() {
  cd Groebner.jl

  patch -Np1 --no-backup-if-mismatch < ../0001-Use-pointer-instead-of-unsafe_convert.patch
}

package() {
  cd Groebner.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh Groebner "${pkgdir}" "${pkgname}" julia-git
}
