pkgname=julia-git-zmq-src
pkgver=1.2.2
_commit=fc00ab417cc0c1c88cecec28be37b80753f24e37
pkgrel=1
pkgdesc="ZMQ.jl"
url="https://github.com/JuliaInterop/ZMQ.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
