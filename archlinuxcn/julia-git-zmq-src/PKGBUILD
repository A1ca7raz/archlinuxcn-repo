sha256sums=('SKIP')

package() {
  cd ZMQ.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh ZMQ "${pkgdir}" "${pkgname}" julia-git
}
