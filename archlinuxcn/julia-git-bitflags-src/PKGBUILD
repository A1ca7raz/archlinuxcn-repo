pkgname=julia-git-bitflags-src
pkgver=0.1.7
_commit=9346fc95aa3257a02448cbb83f8b24770e4dcaa3
pkgrel=1
pkgdesc="BitFlags.jl"
url="https://github.com/jmert/BitFlags.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
