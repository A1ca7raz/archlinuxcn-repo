sha256sums=('SKIP')

package() {
  cd BitFlags.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh BitFlags "${pkgdir}" "${pkgname}" julia-git
}
