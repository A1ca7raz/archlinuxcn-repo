# Maintainer: Damjan Georgievski <gdamjan@gmail.com>

pkgname=sdkmanager
pkgver=0.6.5
pkgrel=1
pkgdesc="A drop-in replacement for sdkmanager from the Android SDK written in Python"
arch=('any')
url="https://gitlab.com/fdroid/${pkgname}"
license=('AGPL-3.0-or-later')
depends=('python-argcomplete' 'python-requests')
optdepends=('gnupg')
makedepends=('python-setuptools')
source=("${url}/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('4956fbd2f13ed98eb7dc5822c74e0db9de91168afeba7325b246a9fd3b967e2b')

build() {
	cd "${pkgname}-${pkgver}/"
	python -m compileall .
	python -O -m compileall .
}

package() {
	cd "${pkgname}-${pkgver}/"
	python setup.py install --root="${pkgdir}" --optimize=1
}
