pkgname=julia-git-klu-src
pkgver=0.4.1
_commit=ff60d141e499a8c967b168fb3dc6b8b04be4a3cc
pkgrel=1
pkgdesc="KLU.jl"
url="https://github.com/JuliaSparse/KLU.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
