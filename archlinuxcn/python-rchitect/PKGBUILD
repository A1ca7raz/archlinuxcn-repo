# Maintainer: Butui Hu <hot123tea123@gmail.com>

_pkgname=rchitect
pkgname=python-rchitect
pkgver=0.4.1
pkgrel=1
pkgdesc='Interoperate R with Python'
arch=('x86_64')
url='https://github.com/randy3k/rchitect'
license=('MIT')
depends=(
  python-cffi
  python-six
)
makedepends=(
  python-pip
  python-setuptools
)

source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/randy3k/rchitect/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('d87c0de97be957a8826e778f657c4111022722dadafa57fa3418023443e20e47412c681f022f3f68b5bcf11df4cba56fa34b326188695b598a8f361cdb632985')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
# vim:set ts=2 sw=2 et:
