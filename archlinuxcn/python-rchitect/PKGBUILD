# Maintainer: Butui Hu <hot123tea123@gmail.com>

_pkgname=rchitect
pkgname=python-rchitect
pkgver=0.4.5
pkgrel=1
pkgdesc='Interoperate R with Python'
arch=('x86_64')
url='https://github.com/randy3k/rchitect'
license=('MIT')
depends=(
  python-cffi
  python-six
)
makedepends=(
  python-pip
  python-setuptools
)

source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/randy3k/rchitect/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('92bf24b072271753f082478ed3ebedbe600362cfa2248194014ae33215ce26db4c41bab04b241cf755fd806ace8f56ea7a422fe798ee2ffcf6ec81bf4da75042')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
# vim:set ts=2 sw=2 et:
