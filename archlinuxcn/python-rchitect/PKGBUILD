# Maintainer: Butui Hu <hot123tea123@gmail.com>

_pkgname=rchitect
pkgname=python-rchitect
pkgver=0.4.3
pkgrel=1
pkgdesc='Interoperate R with Python'
arch=('x86_64')
url='https://github.com/randy3k/rchitect'
license=('MIT')
depends=(
  python-cffi
  python-six
)
makedepends=(
  python-pip
  python-setuptools
)

source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/randy3k/rchitect/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('fc4a47576555bc7788345ee78c8b35270576afb7e857b5b16b6d1533539fb425944aff1b28827afc6704d3c470c0b5fa0ba1a669d66be72f73e3545222e39d46')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
# vim:set ts=2 sw=2 et:
