sha256sums=('SKIP')

package() {
  cd CodecBase.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh CodecBase "${pkgdir}" "${pkgname}" julia-git
}
