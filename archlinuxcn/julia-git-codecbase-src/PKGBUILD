pkgname=julia-git-codecbase-src
pkgver=0.3.0
_commit=27890ebb2864a128e138ba30cd74edad1a7bf785
pkgrel=1
pkgdesc="CodecBase.jl"
url="https://github.com/JuliaIO/CodecBase.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
