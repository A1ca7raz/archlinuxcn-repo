pkgname=julia-git-makiecore-src
pkgver=0.6.7
_commit=51e8a8f37b5b3683d8c7c0508e6a6dea3e0eb86c
pkgrel=4
pkgdesc="MakieCore.jl"
url="https://github.com/MakieOrg/Makie.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/MakieOrg/Makie.jl.git#commit=$_commit"
        0001-Add-explicit-REPL-dependency.patch)
sha256sums=('SKIP'
            'b40c7ff795aad24ed1e45d8801066e7c26c40579dc7df651a76f8eaaee897578')

prepare() {
  cd Makie.jl

  patch --no-backup-if-mismatch -Np1 < ../0001-Add-explicit-REPL-dependency.patch
}

package() {
  cd Makie.jl/MakieCore

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh MakieCore "${pkgdir}" "${pkgname}" julia-git
}
