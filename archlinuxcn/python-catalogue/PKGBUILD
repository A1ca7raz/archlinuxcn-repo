_pkgname=catalogue
pkgname="python-${_pkgname}"
pkgver=2.1.0
pkgrel=1
pkgdesc='Super lightweight function registries for your library'
arch=(any)
url='https://github.com/explosion/catalogue'
license=('MIT')
depends=(
    'python'
    #'pythin-typing-extensions'
    'python-pytest'
    'python-zipp'
)
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
b2sums=('c974746afd872ab528181f233186ae0b4e908e3fab54e9b3dfa1d4fb8be818645f4a807716790d91d612c1010232b81477efc84573be84d89cc1f531cee5555e')

build() {
    cd "${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
    install -Dvm644 'README.md' -t "${pkgdir}/usr/share/doc/${pkgname}"
    install -Dvm644 'LICENSE' -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
