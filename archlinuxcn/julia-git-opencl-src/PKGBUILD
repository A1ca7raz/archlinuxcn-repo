pkgname=julia-git-opencl-src
pkgver=0.9.0
_commit=ff1c25c156f63816c7e3299a7ea565296ccc02af
pkgrel=1
pkgdesc="OpenCL.jl"
url="https://github.com/JuliaGPU/OpenCL.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
