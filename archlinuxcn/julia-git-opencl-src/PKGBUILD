sha256sums=('SKIP')

package() {
  cd OpenCL.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh OpenCL "${pkgdir}" "${pkgname}" julia-git
}
